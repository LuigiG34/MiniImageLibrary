<!DOCTYPE html>
<html>
	<head>
		<meta charset="utf-8">
		<title>Mini Image Library</title>
		<style>
			body {
				font-family: sans-serif;
				margin: 2rem
			}
			.grid {
				display: grid;
				grid-template-columns: repeat(4, 1fr);
				gap: 12px
			}
			img {
				max-width: 100%;
				height: auto;
				display: block
			}
			form {
				margin: 1rem 0
			}
			header {
				display: flex;
				gap: 1rem;
				align-items: center;
				justify-content: space-between
			}
		</style>
	</head>
	<body>
		<header>
			<h1>Mini Image Library</h1>
			<nav>
				{% if app.user %}
					Logged in as
					{{ app.user.userIdentifier }}
					—
					<a href="{{ path('logout') }}">Logout</a>
				{% else %}
					<a href="{{ path('login') }}">Login</a>
					·
					<a href="{{ path('register') }}">Register</a>
				{% endif %}
			</nav>
		</header>

		{% for label, msgs in app.flashes %}
			{% for m in msgs %}
				<p style="color:{{ label == 'error' ? 'red' : 'green' }}">{{ m }}</p>
			{% endfor %}
		{% endfor %}

		{% block body %}{% endblock %}


	</body>
</html>
