<!doctype html>
<html>
<head>
  <meta charset="utf-8">
  <title>Login</title>
</head>
<body>
  <h1>Login</h1>

  {% if error %}
    <p style="color:red">{{ error.messageKey|trans(error.messageData, 'security') }}</p>
  {% endif %}

  <form action="{{ path('login') }}" method="post">
    <label>Email <input type="email" name="_username" value="{{ last_username }}" required></label><br>
    <label>Password <input type="password" name="_password" required></label><br>
    <button>Login</button>
  </form>

  <p>No account? <a href="{{ path('register') }}">Register</a></p>
  <p><a href="{{ path('home') }}">Back to gallery</a></p>
</body>
</html>
